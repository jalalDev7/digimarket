generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model admin {
  id String @default(cuid()) @id
  username String @unique
  email String @unique
  password String
  createdAt DateTime @default(now())
}

model categories {
  id String @default(cuid()) @id
  title String
  desc String?
  state String @default("active")
  products products[]
}

model products {
  id String @default(cuid()) @id
  title String
  desc String?
  price Int @default(0)
  state String @default("active")
  createdAt DateTime @default(now())
  showcase Boolean @default(true)

  categories   categories?   @relation(fields: [catId], references: [id])
  catId String?
  orders orders[]

  @@index([catId])
}

model orders {
  id String @default(cuid()) @id
  clientName String
  clientPhone String
  clientAdress String
  state String @default("new")
  createdAt DateTime @default(now())

  products   products?   @relation(fields: [productId], references: [id])
  productId String?

  @@index([productId])
}

model sliders {
  id String @default(cuid()) @id
  title String
  link String
  imageLink String
}